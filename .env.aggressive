# OPTIMIZED FOR MORE TRADES - Copy this to .env

# Trading modes
TRADING_MODE=paper
STRATEGY_MODE=aggressive

# Exchange
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Symbol (SOL is volatile = more trades)
TRADING_PAIR=SOL/USDT

# Capital
INITIAL_CAPITAL_USDT=10
POSITION_SIZE_PERCENT=0.95

# ICC PARAMETERS - RELAXED FOR MORE TRADES
# Smaller swing period = detect more levels faster
SWING_PERIOD=3

# Lower break threshold = easier to trigger indications
BREAK_THRESHOLD_PERCENT=0.0005

# Wider retest tolerance = easier to enter correction zone
RETEST_TOLERANCE_PERCENT=0.025

# Lower continuation threshold = easier to confirm
CONTINUATION_CONFIRMATION_PERCENT=0.001

# RISK MANAGEMENT - TIGHTER FOR FASTER TRADES
# Smaller profit target = exit faster, more trades
PROFIT_TARGET_PERCENT=0.015

# Tighter stop = cut losses faster
STOP_LOSS_PERCENT=0.008

# Tighter trailing stop
TRAILING_STOP_PERCENT=0.005

# Shorter holding period = force exits, new trades
MAX_HOLDING_PERIOD_HOURS=2
MAX_POSITIONS=1

# DATA - FASTER TIMEFRAME FOR MORE OPPORTUNITIES
# 1-minute candles = more price action, more setups
CANDLE_TIMEFRAME=1m

# Fewer historical candles = faster startup
HISTORICAL_CANDLES=50

# Faster updates = more responsive
PRICE_UPDATE_INTERVAL_MS=2000

# DEBUGGING - SEE EVERYTHING
LOG_LEVEL=debug
DEBUG_ICC_PHASES=true
DEBUG_LEVELS=true
SAVE_TRADE_LOG=true
