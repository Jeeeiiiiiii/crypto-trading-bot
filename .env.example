# ICC Trading Bot Configuration
# Copy this file to .env and fill in your values

# ============================================
# TRADING MODE
# ============================================
# Options: 'paper' or 'live'
# ALWAYS START WITH PAPER TRADING!
TRADING_MODE=paper

# ============================================
# EXCHANGE CONFIGURATION (Binance)
# ============================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# For paper trading, you can leave these empty or use test API keys
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Use testnet for testing (optional)
# BINANCE_TESTNET=true

# ============================================
# TRADING CONFIGURATION
# ============================================
# Trading pair (e.g., BTC/USDT, SOL/USDT, ETH/USDT)
TRADING_PAIR=SOL/USDT

# Initial capital in USDT (300-500 PHP = roughly $5-10 USD)
# 300 PHP ≈ $5.40 USD
# 500 PHP ≈ $9.00 USD
INITIAL_CAPITAL_USDT=10

# Position size as percentage of capital (e.g., 0.95 = 95%)
POSITION_SIZE_PERCENT=0.95

# ============================================
# ICC STRATEGY PARAMETERS
# ============================================
# Swing period for support/resistance detection (5 = 2 left + 1 pivot + 2 right)
SWING_PERIOD=5

# Break threshold to confirm indication (0.002 = 0.2%)
BREAK_THRESHOLD_PERCENT=0.002

# Retest tolerance for correction phase (0.01 = 1%)
RETEST_TOLERANCE_PERCENT=0.01

# Continuation confirmation threshold (0.003 = 0.3%)
CONTINUATION_CONFIRMATION_PERCENT=0.003

# ============================================
# RISK MANAGEMENT
# ============================================
# Profit target (0.025 = 2.5%)
PROFIT_TARGET_PERCENT=0.025

# Stop loss (0.0125 = 1.25%)
STOP_LOSS_PERCENT=0.0125

# Trailing stop (0.0075 = 0.75%)
TRAILING_STOP_PERCENT=0.0075

# Maximum holding period in hours
MAX_HOLDING_PERIOD_HOURS=24

# Maximum number of open positions
MAX_POSITIONS=1

# ============================================
# DATA CONFIGURATION
# ============================================
# Timeframe for OHLC candles (1m, 5m, 15m, 1h, 4h, 1d)
CANDLE_TIMEFRAME=5m

# Number of historical candles to fetch
HISTORICAL_CANDLES=100

# Price update interval in milliseconds
PRICE_UPDATE_INTERVAL_MS=5000

# ============================================
# LOGGING
# ============================================
# Log level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info

# Save trade log to file
SAVE_TRADE_LOG=true
